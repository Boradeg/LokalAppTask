<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".View.DetailedActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="backButtonListner"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/back" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/share" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="40dp"
                    android:visibility="gone"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageView10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/fav" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="64dp"
                    android:background="@drawable/white_top_corner_bg"
                    android:orientation="vertical"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                    <TextView
                        android:id="@+id/titleTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="52dp"
                        android:layout_marginEnd="24dp"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/jobTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/location"
                            app:tint="@color/blue" />

                        <TextView
                            android:id="@+id/locationTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="24dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="0.5"

                            android:background="@drawable/white_bg_stroke">

                            <ImageView
                                android:id="@+id/imageView131"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="8dp"
                                android:background="@drawable/background_oval"
                                android:padding="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/salary" />

                            <TextView
                                android:id="@+id/textView121"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salary (Monthly)"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imageView131"
                          />

                            <TextView
                                android:id="@+id/salaryTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="bjrjjr"
                                android:textColor="@color/blue"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:layout_below="@id/textView121"
                                android:layout_toRightOf="@id/imageView131" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/white_bg_stroke">

                            <ImageView
                                android:id="@+id/imageView132"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="8dp"
                                android:background="@drawable/background_oval"
                                android:padding="8dp"

                                app:srcCompat="@drawable/job_type" />

                            <TextView
                                android:id="@+id/textView122"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Job Type"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@id/imageView132"
                                app:layout_constraintStart_toEndOf="@+id/imageView132"
                                app:layout_constraintTop_toTopOf="@+id/imageView132" />

                            <TextView
                                android:id="@+id/jobTypeTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@id/imageView132"
                                android:textColor="@color/blue"
                                android:layout_below="@id/textView122"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView132"
                                app:layout_constraintStart_toStartOf="@+id/textView122" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/white_bg_stroke">

                            <ImageView
                                android:id="@+id/imageView133"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="8dp"

                                android:background="@drawable/background_oval"
                                android:padding="8dp"
                                app:srcCompat="@drawable/working_model"
                              />

                            <TextView
                                android:id="@+id/textView123"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:layout_marginTop="5dp"

                                android:layout_toRightOf="@id/imageView133"
                               />

                            <TextView
                                android:id="@+id/dateTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="gfds"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@id/imageView133"
                                android:layout_below="@id/textView123"
                                android:textColor="@color/blue"
                                android:textStyle="bold"
                                 />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/white_bg_stroke">

                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="8dp"
                                android:background="@drawable/background_oval"
                                android:padding="8dp"

                                app:srcCompat="@drawable/salary" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Level"
                              android:layout_toRightOf="@id/imageView13"/>

                            <TextView
                                android:id="@+id/levelTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_toRightOf="@id/imageView13"
                                android:layout_below="@id/textView12"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/blue"
                                android:textStyle="bold"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical">

                        <com.google.android.material.appbar.AppBarLayout
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/tabsLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:tabBackground="@color/white"
                                app:tabGravity="fill"
                                app:tabIndicatorColor="@color/blue"
                                app:tabIndicatorHeight="3dp"
                                app:tabMaxWidth="0dp"
                                app:tabMode="fixed"
                                app:tabSelectedTextColor="@color/blue"
                                app:tabTextAppearance="@style/tab_layout"
                                app:tabTextColor="@color/black" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#d8d8d8" />
                        </com.google.android.material.appbar.AppBarLayout>

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="280dp"
                            android:background="@color/white" />
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/addTocartBtn"
                        style="@android:style/Widget.Button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="24dp"
                        android:background="@drawable/blue_full_corner"
                        android:text="Apply for job"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/picDetail"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:elevation="3dp"
                    android:layout_centerHorizontal="true"
                    app:shapeAppearance="@style/CircleImageView"
                    android:src="@drawable/img_2" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>



</RelativeLayout>

